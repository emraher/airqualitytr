bibentry(
  bibtype  = "Manual",
  title    = "airqualitytr: Turkish Air Quality Data Access Tools",
  author   = person("Emrah", "Er", email = "eer@eremrah.com",
                    comment = c(ORCID = "0000-0001-9909-7479")),
  year     = 2025,
  note     = "R package version 0.1.0",
  url      = "https://github.com/emraher/airqualitytr",
  textVersion = paste(
    "Er, E. (2025).",
    "airqualitytr: Turkish Air Quality Data Access Tools.",
    "R package version 0.1.0.",
    "https://github.com/emraher/airqualitytr"
  )
)

citFooter("Please also cite the data source: Turkish Ministry of Environment, Urbanization and Climate Change. https://sim.csb.gov.tr/")
